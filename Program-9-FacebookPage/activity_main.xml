<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/prof"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="25sp"
        android:text="Facebook Profile"
        android:gravity="center"
        android:background="#4169E1"
        android:textColor="@color/white"
        />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/home"
        android:layout_below="@+id/prof"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="-50dp"
        android:gravity="center"
        android:id="@+id/lyt1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/myprofile" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Anwar Rasheed"
            android:gravity="center"/>
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="italic"
            android:text="(IT Professional)"
            android:gravity="center"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lyt1"
        android:orientation="horizontal"
        android:id="@+id/lyt2">
        <ImageView
            android:id="@+id/icon1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/homebutton1"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/icon2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/chat"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/icon3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/whatsapp"
            android:layout_weight="1"/>

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/lyt2"
    android:layout_marginTop="30dp"
   android:padding="25dp"
    android:id="@+id/lyt3">
    <ImageView
        android:id="@+id/icon4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/placeholder"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="  Lives in Port Blair"
        android:gravity="center_vertical"
        android:layout_weight="1"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lyt3"

        android:padding="25dp"
        android:id="@+id/lyt4">
        <ImageView
            android:id="@+id/icon5"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:srcCompat="@drawable/workingat"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="  Works at Department of IT"
            android:gravity="left"
            android:layout_weight="1"
            />
    </LinearLayout>



</RelativeLayout>